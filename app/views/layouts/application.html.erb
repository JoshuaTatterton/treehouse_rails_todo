<!DOCTYPE html>
<html>
<head>
  <title>RailsTodo</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="nav">
    <h1><%= link_to "RailsToDo", root_path %></h1>
    <ul>
      <li><%= link_to "Todo Lists", todo_lists_path %></li>
      <li><%= link_to "Completed Todo Lists", completed_todo_lists_path %></li>
      <li><%= link_to "Incomplete Todo Lists", incomplete_todo_lists_path %></li>
    </ul>
    <br class="clear">
  </div>
  <% flash.each do |type, message| %>
    <div class="alert flash <%= type %>">
      <%= message %>
    </div>
  <% end %>

  <%= yield %>

</body>
</html>
